{
  "compilerOptions": {
    // 1. Entorno de Ejecuci贸n (Node.js)
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    // 2. Control de Calidad y Tipado Estricto
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // 3. Interoperabilidad
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // 4. Salida y Rutas
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,

    // 5. M贸dulos y Tipos
    "lib": ["es2020", "dom"],
    "types": ["node", "jest"],

    // 6. Alias global (para backend y dominio)
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["domain/src/*"]
    }
  },

  // Archivos a incluir en la compilaci贸n
  "include": ["./**/*.ts"],

  // Archivos a excluir de la compilaci贸n
  "exclude": [
    "node_modules",
    "dist",
    "apps/frontend"
  ]
}